{
  "name": "sbc-microservices",
  "version": "1.0.0",
  "description": "Sniper Business Center Microservices Backend",
  "scripts": {
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "delete": "pm2 delete all",
    "logs": "pm2 logs",
    "status": "pm2 status",

    "start:gateway": "pm2 start ecosystem.config.js --only gateway-service",
    "start:user": "pm2 start ecosystem.config.js --only user-service",
    "start:notification": "pm2 start ecosystem.config.js --only notification-service",
    "start:payment": "pm2 start ecosystem.config.js --only payment-service",
    "start:product": "pm2 start ecosystem.config.js --only product-service",
    "start:tombola": "pm2 start ecosystem.config.js --only tombola-service",
    "start:settings": "pm2 start ecosystem.config.js --only settings-service",
    "start:chat": "pm2 start ecosystem.config.js --only chat-service",

    "stop:gateway": "pm2 stop gateway-service",
    "stop:user": "pm2 stop user-service",
    "stop:notification": "pm2 stop notification-service",
    "stop:payment": "pm2 stop payment-service",
    "stop:product": "pm2 stop product-service",
    "stop:tombola": "pm2 stop tombola-service",
    "stop:settings": "pm2 stop settings-service",
    "stop:chat": "pm2 stop chat-service",

    "restart:gateway": "pm2 restart gateway-service",
    "restart:user": "pm2 restart user-service",
    "restart:notification": "pm2 restart notification-service",
    "restart:payment": "pm2 restart payment-service",
    "restart:product": "pm2 restart product-service",
    "restart:tombola": "pm2 restart tombola-service",
    "restart:settings": "pm2 restart settings-service",
    "restart:chat": "pm2 restart chat-service",

    "delete:gateway": "pm2 delete gateway-service",
    "delete:user": "pm2 delete user-service",
    "delete:notification": "pm2 delete notification-service",
    "delete:payment": "pm2 delete payment-service",
    "delete:product": "pm2 delete product-service",
    "delete:tombola": "pm2 delete tombola-service",
    "delete:settings": "pm2 delete settings-service",
    "delete:chat": "pm2 delete chat-service",

    "logs:gateway": "pm2 logs gateway-service",
    "logs:user": "pm2 logs user-service",
    "logs:notification": "pm2 logs notification-service",
    "logs:payment": "pm2 logs payment-service",
    "logs:product": "pm2 logs product-service",
    "logs:tombola": "pm2 logs tombola-service",
    "logs:settings": "pm2 logs settings-service",
    "logs:chat": "pm2 logs chat-service",

    "build": "bash build-all.sh",
    "build:gateway": "bash build-all.sh gateway-service",
    "build:user": "bash build-all.sh user-service",
    "build:notification": "bash build-all.sh notification-service",
    "build:payment": "bash build-all.sh payment-service",
    "build:product": "bash build-all.sh product-service",
    "build:tombola": "bash build-all.sh tombola-service",
    "build:settings": "bash build-all.sh settings-service",
    "build:chat": "bash build-all.sh chat-service",

    "install:all": "bash build-all.sh --install",
    "install:gateway": "bash build-all.sh -i gateway-service",
    "install:user": "bash build-all.sh -i user-service",
    "install:notification": "bash build-all.sh -i notification-service",
    "install:payment": "bash build-all.sh -i payment-service",
    "install:product": "bash build-all.sh -i product-service",
    "install:tombola": "bash build-all.sh -i tombola-service",
    "install:settings": "bash build-all.sh -i settings-service",
    "install:chat": "bash build-all.sh -i chat-service",

    "setup": "bash build-all.sh --install --build",
    "setup:gateway": "bash build-all.sh -i -b gateway-service",
    "setup:user": "bash build-all.sh -i -b user-service",
    "setup:notification": "bash build-all.sh -i -b notification-service",
    "setup:payment": "bash build-all.sh -i -b payment-service",
    "setup:product": "bash build-all.sh -i -b product-service",
    "setup:tombola": "bash build-all.sh -i -b tombola-service",
    "setup:settings": "bash build-all.sh -i -b settings-service",
    "setup:chat": "bash build-all.sh -i -b chat-service",

    "dev": "concurrently -k -n gateway,user,notification,payment,product,tombola,settings,frontend -c blue,green,yellow,red,magenta,cyan,white,gray \"cd gateway-service && npm run dev\" \"cd user-service && npm run dev\" \"cd notification-service && npm run dev\" \"cd payment-service && npm run dev\" \"cd product-service && npm run dev\" \"cd tombola-service && npm run dev\" \"cd settings-service && npm run dev\" \"cd admin-frontend-ms && npm run dev\"",
    "dev:backend": "concurrently -k -n gateway,user,notification,payment,product,tombola,settings -c blue,green,yellow,red,magenta,cyan,white \"cd gateway-service && npm run dev\" \"cd user-service && npm run dev\" \"cd notification-service && npm run dev\" \"cd payment-service && npm run dev\" \"cd product-service && npm run dev\" \"cd tombola-service && npm run dev\" \"cd settings-service && npm run dev\"",
    "dev:gateway": "cd gateway-service && npm run dev",
    "dev:user": "cd user-service && npm run dev",
    "dev:notification": "cd notification-service && npm run dev",
    "dev:payment": "cd payment-service && npm run dev",
    "dev:product": "cd product-service && npm run dev",
    "dev:tombola": "cd tombola-service && npm run dev",
    "dev:settings": "cd settings-service && npm run dev",
    "dev:chat": "cd chat-service && npm run dev",
    "dev:frontend": "cd admin-frontend-ms && npm run dev"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/qrcode-terminal": "^0.12.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "mongoose": "^7.0.0",
    "qrcode": "^1.5.4"
  }
}
