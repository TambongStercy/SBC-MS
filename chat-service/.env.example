# Chat Service Environment Variables

# Server
NODE_ENV=development
PORT=3008
HOST=0.0.0.0

# MongoDB
MONGODB_URI_DEV=mongodb://localhost:27017/sbc_chat_dev
MONGODB_URI_PROD=mongodb://localhost:27017/sbc_chat_prod

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=1d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Service-to-Service Communication
SERVICE_SECRET=your_service_secret_here
USER_SERVICE_URL=http://localhost:3001/api
SETTINGS_SERVICE_URL=http://localhost:3007/api
ADVERTISING_SERVICE_URL=http://localhost:3005/api

# CORS
CORS_ORIGIN=http://localhost:3030,http://localhost:5173

# Logging
LOG_LEVEL=info

# Content Moderation
CONTENT_MODERATION_ENABLED=true
# Options: nsfwjs (recommended, free, self-hosted), sightengine (paid API)
CONTENT_MODERATION_PROVIDER=nsfwjs

# Sightengine API Credentials (only needed if using sightengine provider)
# Sign up at https://sightengine.com/
SIGHTENGINE_API_USER=your_sightengine_api_user
SIGHTENGINE_API_SECRET=your_sightengine_api_secret

# Moderation Thresholds (0.0 to 1.0)
# Block threshold: content with scores above this will be blocked
MODERATION_BLOCK_THRESHOLD=0.85
# Warn threshold: content with scores above this will be flagged/warned but allowed
MODERATION_WARN_THRESHOLD=0.60
